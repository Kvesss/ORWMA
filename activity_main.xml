<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvShoeSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate US shoe size"
        android:layout_toRightOf="@id/tvShoeSize"
        />
    <EditText
        android:id="@+id/etEnterShoeSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etHint"
        android:layout_below="@id/btnCalc"
        android:inputType="number"
        />

    <ImageView
        android:id="@+id/ivShoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEnterShoeSize"
        android:src="@drawable/sohes" />

</RelativeLayout>