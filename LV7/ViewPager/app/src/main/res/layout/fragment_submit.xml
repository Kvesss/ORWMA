<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etSubmit"
            android:layout_width="@dimen/etSubmitWidth"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="@string/submitHint"
            android:layout_marginLeft="@dimen/etSubmitMargin"
            android:layout_marginRight="@dimen/etSubmitMargin"
            android:inputType="text"/>


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/etSubmit"
            android:text="@string/btnSubmitText" />

    </RelativeLayout>
</FrameLayout>